<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="car_reservation_view_tree" model="ir.ui.view">
        <field name="name">Reservation</field>
        <field name="model">car.rent.reservation</field>
        <field name="arch" type="xml">
            <tree string="car_rent">
                
                    <field name="user_id"/>
                    <field name="rent_type"/>
            </tree>
        </field>
    </record>

    <record id="car_reservation_form" model="ir.ui.view">
        <field name="name">Car Reservation form</field>
        <field name="model">car.rent.reservation</field>
        <field name="arch" type="xml">
            <form string="car_reservation">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable' : 1}"/>
                </header>
                <sheet>
                    <h1>Reservation</h1>
                    <group>
                        
                        <group>
                            <field name="user_id"/>
                        </group> 
                        <group>
                            <field name="rent_type"/>
                        </group>
                    </group>  
                    <notebook>
                        <page string="Rent Details"> 
                            <group>
                                <group string="Rent Details">
                                    <field name="rent_per_km" attrs="{'invisible': [('rent_type', 'in',('hours','days'))]}"/>
                                    <field name="rent_per_hours" attrs="{'invisible': [('rent_type', 'in',('kilometers','days'))]}"/>
                                    <field name="rent_per_day" attrs="{'invisible': [('rent_type', 'in',('kilometers','hours'))]}"/>
                                </group>      
                            </group>    
                        </page>
                    </notebook>                
                </sheet>
            </form>
        </field>
    </record>
</odoo>